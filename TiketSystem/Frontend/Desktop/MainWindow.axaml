<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Desktop.MainWindow"
        Title="Desktop" >
	
    <Grid ColumnDefinitions="* * *">

	    <ListBox Items="{Binding Path=Tasks}" Grid.ColumnSpan="2">
		    
		    <ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<WrapPanel />
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel MaxWidth="300" MaxHeight="300" Height="280" Orientation="Vertical">
						<TextBlock Text="{Binding Title}" Margin="5,0,0,0" ></TextBlock>
						<TextBlock Text="{Binding Description}" Margin="5,0,0,0" TextWrapping="Wrap"></TextBlock>
						<Button Background="Transparent" DockPanel.Dock="Left">
							
								<Image Source="images/text-box-edit-outline.png" Width="25"></Image>
							
						</Button>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
    </Grid>
    
</Window>
